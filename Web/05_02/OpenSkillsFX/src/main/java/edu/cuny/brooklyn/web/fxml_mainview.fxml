<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<GridPane hgap="5.0" vgap="5.0"
	xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/9.0.1"
	fx:controller="edu.cuny.brooklyn.web.MainViewController">
	<rowConstraints>
		<RowConstraints />
		<RowConstraints minHeight="10.0" vgrow="NEVER" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" />
		<RowConstraints minHeight="10.0" prefHeight="30.0"
			vgrow="NEVER" />
		<RowConstraints minHeight="300.0" prefHeight="30.0"
			vgrow="SOMETIMES" />
	</rowConstraints>
	<columnConstraints>
		<ColumnConstraints />
		<ColumnConstraints hgrow="NEVER" minWidth="10.0" />
		<ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
		<ColumnConstraints minWidth="10.0" />
	</columnConstraints>
	<children>
		<Label alignment="CENTER" maxWidth="1.7976931348623157E308"
			text="Look up Job Titles" GridPane.columnIndex="1"
			GridPane.columnSpan="3" GridPane.rowIndex="1" />
		<Button fx:id="searchButton" maxWidth="1.7976931348623157E308"
			mnemonicParsing="false" text="Search" GridPane.columnIndex="3"
			GridPane.rowIndex="2" />
		<Label alignment="CENTER_RIGHT"
			maxWidth="1.7976931348623157E308" text="Enter key words"
			GridPane.columnIndex="1" GridPane.rowIndex="2" />
		<TextField fx:id="keywordField" minWidth="200.0"
			GridPane.columnIndex="2" GridPane.rowIndex="2" />
		<ListView fx:id="jobTitleListView" prefHeight="200.0"
			prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="3"
			GridPane.rowIndex="4" />
		<Label fx:id="statusMsgLabel" maxWidth="1.7976931348623157E308"
			GridPane.columnIndex="1" GridPane.columnSpan="3"
			GridPane.rowIndex="3" GridPane.vgrow="SOMETIMES" />
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
</GridPane>
